// package phone.type.dumbphones
import java.util.Scanner
public class DumbPhone extends Celular {

    public void calculadora(double a, double b) {
        System.out.println("Calculadora aberta! Você escolheu " + a + " e " + b + " para operar, " +
                "Escolha a operação que deseja realizar:");
        System.out.println("1 - Soma, 2 - Subtração, 3 - Divisão, 4 - Multiplicação");
        Scanner operacao = new Scanner();
        operacao = nextInt();
        switch (operacao) {
            case 1:
                resultado = a + b;
                break;
            case 2:
                resultado = a - b;
                break;
            case 3:
                resultado = a / b;
                break;
            case 4:
                resultado = a * b;
                break;
            default:
                System.out.println("Numero invalido");
        }

    }
}